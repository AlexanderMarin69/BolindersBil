@model BolindersBil.web.ViewModels.ContactViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/Contact.js"></script>
</head>
<body>
    <div class="container">
        <h2>Kontakta oss</h2>
        <hr />
        <div class="row">

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Bolinders Bil Värnamo</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Bultgatan 2 Värnamo</h6>
                    <a href="tel: +46370123456" class="card-link">0370-123456</a>
                    <a href="mailto:varnamo@bolindersbil.se" class="card-link">varnamo@bolindersbil.se</a>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Bolinders Bil Jönköping</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Lovsjövägen 33 Jönköping</h6>
                    <a href="tel: +4636123456" class="card-link">0370-123456</a>
                    <a href="mailto:jonkoping@bolindersbil.se" class="card-link">jonkoping@bolindersbil.se</a>
                </div>
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Bolinders Bil Göteborg</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Industrivägen 1 Göteborg</h6>
                    <a href="tel: +4631123456" class="card-link">031-123456</a>
                    <a href="mailto:goteborg@bolindersbil.se" class="card-link">goteborg@bolindersbil.se</a>
                </div>
            </div>

            

            <br />
            <div class="panel-body">
                <h4>Fyll i kontakt formuläret!</h4>
                <form asp-action="SendForm" method="post">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Name">Namn: </label>
                        <input class="form-control" asp-for="Name" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email: </label>
                        <input class="form-control" asp-for="Email" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Telefon Nummer: </label>
                        <input class="form-control" asp-for="PhoneNumber" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Ärende: </label>
                        <input class="form-control" asp-for="Title" required />
                    </div>
                    <div class="form-group">
                        <label asp-for="Message">Meddelande: </label>
                        <input class="form-control-plaintext" asp-for="Message" required />
                    </div>

                    <div class="form-group">
                        <label asp-for="DealerShipMail">Anläggning: </label>
                        <select class="form-control" asp-for="DealerShipMail">
                            <option value="kontakt@bolindersbil.se">Välj anläggning</option>
                            <option value="jonkoping@bolindersbil.se">Jönkoping</option>
                            <option value="varnamo@bolindersbil.se">Värnamo</option>
                            <option value="goteborg@bolindersbil.se">Göteborg</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Skicka</button>

                </form>

            </div>








        </div>
    </div>

</body>

</html>