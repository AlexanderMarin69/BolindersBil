@model EditVehicleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>@ViewBag.Heading</h2>


<form asp-action="Edit" asp-controller="admin" method="post" class="col-md-12">
    <input type="hidden" asp-for="Vehicle.Id" />

    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Vehicle.Model">Model:</label>
        <input class="form-control" asp-for="Vehicle.Model" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.ModelDescription">ModelDescription:</label>
        <input class="form-control" asp-for="Vehicle.ModelDescription" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.RegistrationNumber">RegistrationNumber:</label>
        <input class="form-control" asp-for="Vehicle.RegistrationNumber" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Year">Year:</label>
        <input asp-items="Model.Year" asp-for="Vehicle.Year" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Brand">Brand:</label>
        <select asp-items="Model.Brands" asp-for="Vehicle.BrandId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Mileage">Mileage :</label>
        <input class="form-control" asp-for="Vehicle.Mileage" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Price">Price:</label>
        <input class="form-control" asp-for="Vehicle.Price" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Body">Body:</label>
        <input class="form-control" asp-for="Vehicle.Body" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Color">Color:</label>
        <input class="form-control" asp-for="Vehicle.Color" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Transmission">Transmission:</label>
        <input class="form-control" asp-for="Vehicle.Transmission" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Fuel">Fuel:</label>
        <input class="form-control" asp-for="Vehicle.Fuel" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Horsepower">Horsepower:</label>
        <input class="form-control" asp-for="Vehicle.Horsepower" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Lease">Lease:</label>
        <input class="form-control checkbox-custom" asp-for="Vehicle.Lease" />
    </div>

    <div class="form-group">
        <label asp-for="Vehicle.Attributes">Attributes:</label>
        <input class="form-control" asp-for="Vehicle.Attributes" />
    </div>


    <div class="form-group">
        <label asp-for="Vehicle.Dealership">Dealership:</label>
        <select asp-items="Model.Dealerships" asp-for="Vehicle.DealerShipId"></select>
    </div>



    @*<div class="form-group">
            <label asp-for="FileUpload">FileUpload:</label>
            <input class="form-control" asp-for="FileUpload" />
        </div>*@


    <label for="FileUpload">Upload Image:</label>
    <input type="file" name="FileUpload" id="FileUpload" /><br><br>
    <input type="submit" value="Upload Image" />

    <br><br>
    <br />


    <div class="pull-left">
            <button class="btn btn-primary" type="submit">Spara</button>
            <a asp-action="Index" class="btn btn-danger">Avbryt</a>
    </div>

</form>

