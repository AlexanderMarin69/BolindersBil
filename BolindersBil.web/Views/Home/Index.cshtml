    <section id="clients" class="section-bg">

        <div class="container">

            <div class="section-header">
                <h3>Bilmärken</h3>
                <p>Hitta din bil utifrån märket.</p>
            </div>

            <div class="row no-gutters clients-wrap clearfix wow fadeInUp">

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Volkswagen-logo-2015-1920x1080.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/BMW-logo-2000-2048x2048.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Chevrolet-logo-2013-2560x1440.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Ford-logo-2003-1366x768.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Honda-logo-1920x1080.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Volvo-logo-2006-1920x1080.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Jaguar-logo-2012-1920x1080.png" class="img-fluid" alt="">
                    </div>
                </div>

                <div class="col-lg-3 col-md-4 col-xs-6">
                    <div class="client-logo">
                        <img src="~/img/car-logos/Mercedes-Benz-logo-2011-1920x1080.png" class="img-fluid" alt="">
                    </div>
                </div>

            </div>

        </div>

    </section>


    <br />




    <h2>Nyheter</h2>
    <hr />


    @if (Model.ArticlesResults != null)
    {
       

        @foreach (var article in Model.ArticlesResults.Articles.Take(3))
        {
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@article.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@article.Author - <i><small>@article.PublishedAt</small></i></h6>
                    <p class="card-text">@BolindersBil.web.Infrastructure.NewsApiExtension.ShortenString(article.Description, 50)...</p>
                    <a href="@article.Url" target="_blank" class="card-link">Läs mer</a>
                    <br />
                </div>
            </div>
            <br />
        }
    }



    <section id="why-us" class="wow fadeIn">
        <div class="container">
            <header class="section-header">
                <h3>Lager</h3>

            </header>


            <div class="row counters">

                <div class="col-lg-4 col-6 text-center">
                    <span data-toggle="counter-up">100</span>
                    <p>Begagnade bilar</p>
                </div>

                <div class="col-lg-4 col-6 text-center">
                    <span data-toggle="counter-up">250</span>
                    <p>Sammanlagt</p>
                </div>

                <div class="col-lg-4 col-6 text-center">
                    <span data-toggle="counter-up">150</span>
                    <p>Nya bilar</p>
                </div>

            </div>

        </div>
    </section>





</main>
